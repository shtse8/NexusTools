{
  "name": "@shtse8/nexus-tools",
  "version": "0.1.0",
  "description": "A core toolkit MCP server providing essential tools for AI agents.",
  "type": "module",
  "bin": {
    "nexus-tools": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md"
  ],
